@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    
        <h1 style="text-align: center;">Gummy Bear Kingdom</h1>
   
    
		<h2>Featured Products</h2>
        <div class = "row">
			@foreach(var property in Model)
			{

			<div class = "col-md-4">
				
			<h3>Name : @property.Name</h3> 
            
            <h3>Cost : $@property.Cost</h3>
            <h3>Description : @property.Description</h3>
			

            </div>
			}
        </div>


  
         <h3>@Html.ActionLink("View Products", "Index", "Properties")</h3>
         <h3>@Html.ActionLink("View Reviews", "Index", "Reviews")</h3>
    </body>
</html>