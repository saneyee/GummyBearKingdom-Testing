@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    
        <h1 style="text-align: center;">Gummy Bear Kingdom</h1>
   
    
		<h2>Featured Products</h2>
        <div class = "row">
			@foreach(var property in Model)
			{

			<div class = "col-md-4">
				
			<h3><a href='@Url.Action("Details", "Property", new { id = property.PropertyId })'> Name : @property.Name</a></h3> 
            
            <h3>Cost : $@property.Cost</h3>
            <h3>Description : @property.Description</h3>
			

            </div>
			}
        </div>


  
         <h2>@Html.ActionLink("Product list", "Index", "Properties")</h2>
         <h2>@Html.ActionLink("Review list", "Index", "Reviews")</h2>
    </body>
</html>